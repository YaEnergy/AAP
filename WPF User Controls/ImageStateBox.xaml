<UserControl x:Class="AAP.ImageStateBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AAP"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseLeftButtonDown="OnMouseLeftButtonDown">
    <UserControl.Resources>
        <local:ImageStateBoxViewModel x:Name="ViewModel" x:Key="ViewModel"/>
    </UserControl.Resources>
    <Grid Background="{Binding BoxBrush, Source={StaticResource ViewModel}}">
        <Image Source="{Binding BoxImageSource, Source={StaticResource ViewModel}}"/>
    </Grid>
</UserControl>
